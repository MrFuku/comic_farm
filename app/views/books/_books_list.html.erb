<%= books.count %>
<ul class="list-group" >
<% books.each do |book| %>

    <li class="list-group-item row" style="width:max">
      
      <div class="col-lg-7 d-inline"><%= book.title %></div>
      <div class="col-lg-3 d-inline"><%= book.publisherName %></div>
      <div class="col-lg-2 d-inline"><%= book.salesDate %></div>
    </li>
  
<% end %>
</ul>