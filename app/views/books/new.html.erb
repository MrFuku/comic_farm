<div class="mb-5">
    <%= form_tag :book, method: :get do  %>
      <%= label_tag :title, 'タイトル検索' %>
      <%= text_field_tag 'title', params[:title], class: 'form-control mb-2'  %>
      <%= submit_tag "検索", class:'btn btn-primary' %>
    <% end %>
</div>

    
<% if @books.present? %>
    <% @books.each do |book| %>
    <div class="card mb-4" style="max-width: 1000px;">
        
        <div class="row no-gutters">
            
            <div class="col-md-3 p-1">
                <img src="<%= book.image_url %>">
            </div>
        
            <div class="col-md-9">
            <div class="card-body p-3">
            
                <p class="card-text"><%= book.publisherName %></p>
                <h5 class="card-title"><%= book.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
                
                <p class="card-text">発売日　<%= book.salesDate %></p>
                <p class="card-text"><%= book.isbn %></p>
                <p class="card-text"><%= book.url %></p>
                
                <a href="#" class="card-link">詳細</a>
                <%= form_tag(books_path) do %>
                <%= hidden_field_tag :isbn, book.isbn %>
                <%= submit_tag '登録する！', class:'btn btn-success' %>
            </div>
            </div>
        </div>
        <% end %>
    </div>
    <% end %>


<% end %>
