<div class="card mb-4" style="max-width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-4 p-1">
                <img src="<%= @book.image_url %>">
            </div>
            <div class="col-md-8">
                <div class="card-body p-3">
            
                    <p class="card-text"><%= @book.publisherName %></p>
                    <h5 class="card-title"><%= @book.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= @book.author %></h6>
                    
                    <p class="card-text">発売日　<%= @book.salesDate %></p>
                    <p class="card-text"><%= @book.isbn %></p>
                    <p class="card-text"><%= link_to @book.url, @book.url, target:'_blank' %></p>
                    <% amazonurl = "http://www.amazon.co.jp/dp/#{@book.isbn}" %>
                    <p class="card-text">@amazon <%= link_to amazonurl, amazonurl %></p>
                    <a href="#" class="card-link">詳細</a>
                    
                    <%= render 'subscribes/sub_button', book: @book %>
                    
                    <br>
                    商品リンクなど
                </div>
            </div>
        </div>
</div>

