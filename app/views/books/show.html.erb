<div class="card mb-4" style="max-width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-4 p-1">
                <img src="<%= @book.image_url %>">
            </div>
            <div class="col-md-8">
              <div class="card-body p-3">
          
                <p class="card-text"><%= @book.publisherName %></p>
                <h5 class="card-title"><%= @book.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= @book.author %></h6>
                
                <p class="card-text">発売日　<%= @book.salesDate %></p>
                <p class="card-text">isbn:<%= @book.isbn %></p>
                
                <%= render 'subscribes/sub_button', isbn: @book.isbn %>
                <%= link_to 'レビューを書く', reviews_new_path(id: @book.id), class:"btn btn-info" %>
                <%= link_to 'レビューをみる', reviews_path(id: @book.id), class:'btn btn-success' %>
                <div class="mt-2 mb-2">
                  <%= link_to '楽天', @book.url, class: 'card-link btn-sm btn-dark ml-1', target:'blank' %>
                  <% amazonurl = "http://www.amazon.co.jp/dp/#{change_isbn(@book.isbn)}" %>
                  <%= link_to 'Amazon', amazonurl, class: 'card-link btn-sm btn-dark ml-1', target:'blank' %>
                </div>
                
                
        </div>
      </div>
    </div>
  </div>
  
<div>
  <%= link_to 'レビューを書く', reviews_new_path(id: @book.id) %>
</div>

<div>
  <%= link_to 'レビューをみる', reviews_path(id: @book.id) %>
</div>