<% if current_user.checksub?(isbn) %>
  <% book = Book.find_by(isbn: isbn) %>
  <%= form_with(model: current_user.subscribes.find_by(book_id: current_user.books.find_by(isbn: book.isbn).id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :isbn_id, isbn %>
    <%= f.submit '登録解除', class: 'btn btn-danger w-100 mt-1 mb-1' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.subscribes.build, local: true) do |f| %>
    <%= hidden_field_tag :isbn_id, isbn %>
    <%= f.submit '登録する', class: 'btn btn-primary w-100 mt-1 mb-1' %>
  <% end %>
<% end %>