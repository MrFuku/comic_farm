<div class="mb-4"><h2><%= @user.name %>さんのページです</h2></div>
<!--タブボタン部分-->
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="#tab1" data-toggle="tab">登録した漫画</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#tab2" data-toggle="tab">お気に入りの漫画</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#tab3" data-toggle="tab">投稿済みのレビュー</a>
  </li>
</ul>

<!--タブコンテンツ部分-->
<div class="tab-content">
  
    <div id="tab1" class="tab-pane active">
      <% @subs.each do |comic| %>
        <div class="card mb-4" style="max-width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-3 p-1">
                <img src="<%= comic.image_url %>">
            </div>
            <div class="col-md-9">
            <div class="card-body p-3">
                <p class="card-text"><%= comic.publisherName %></p>
                <h5 class="card-title"><%= link_to comic.title, books_path + '/'+comic.isbn %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= comic.author %></h6>
                <p class="card-text">発売日　<%= comic.salesDate %></p>
                <div class="mt-2 mb-2">
                  <%= link_to '楽天', comic.url, class: 'card-link btn-sm btn-dark ml-1', target:'blank' %>
                  <% amazonurl = "http://www.amazon.co.jp/dp/#{change_isbn(comic.isbn)}" %>
                  <%= link_to 'Amazon', amazonurl, class: 'card-link btn-sm btn-dark ml-1', target:'blank' %>
                </div>
            </div>
            </div>
        </div>
        
    </div>
    
      <% end %>
      <%= paginate @subs %>
    </div>
    
    <div id="tab2" class="tab-pane">
      <% @favs.each do |comic| %>
        <div class="card mb-4" style="max-width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-3 p-1">
                <img src="<%= comic.image_url %>">
            </div>
            <div class="col-md-9">
            <div class="card-body p-3">
                <p class="card-text"><%= comic.publisherName %></p>
                <h5 class="card-title"><%= link_to comic.title, books_path + '/'+comic.isbn %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= comic.author %></h6>
                <p class="card-text">発売日　<%= comic.salesDate %></p>
                <div class="mt-2 mb-2">
                  <%= link_to '楽天', comic.url, class: 'card-link btn-sm btn-dark ml-1', target:'blank' %>
                  <% amazonurl = "http://www.amazon.co.jp/dp/#{change_isbn(comic.isbn)}" %>
                  <%= link_to 'Amazon', amazonurl, class: 'card-link btn-sm btn-dark ml-1', target:'blank' %>
                </div>
            </div>
            </div>
        </div>
    </div>
    <% end %>
    <%= paginate @favs %>
    </div>
    
    <div id="tab3" class="tab-pane">
      <% @reviews.each do |review| %>
        <div class="card w-80 m-4">
            <div class="card-body">
              <h5 class="card-title"><%= link_to review.head, review_path(review.id) %></h5>
              <% review_book = Book.find(review.book_id) %>
              <h6 class="card-subtitle mb-2 text-muted"><%= review_book.title %></h6>
              <h6 class="card-subtitle mb-2 text-muted"><%= review.created_at %></h6>
              <p class="card-text"><%= review.content %></p>
            </div>
        </div>
      <% end %>
    </div>
    
</div>

